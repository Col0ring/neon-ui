{
  "name": "neon-ui",
  "description": "a react components library",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://github.com/col0ring/neon-ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/col0ring/neon-ui.git"
  },
  "version": "1.0.0",
  "scripts": {
    "prepare": "husky install",
    "pre-commit:lint-staged": "lint-staged",
    "commit-msg:commitlint": "commitlint --config commitlint.config.js -e $HUSKY_GIT_PARAMS",
    "init": "yarn install && yarn run build",
    "start": "dumi dev",
    "dev": "npm run start",
    "build:docs": "dumi build",
    "version": "lerna version --no-changelog --no-push --no-git-tag-version",
    "release": "lerna publish from-package --dist-tag latest",
    "clean": "yarn workspaces run clean && lerna clean",
    "build": "lerna run --stream --sort build",
    "serve": "serve docs-dist",
    "lint": "npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
    "lint:prettier": "prettier --write --no-error-on-unmatched-pattern **/*.{ts,tsx,js,json,html,yml,css,less,md}",
    "lint:eslint": "eslint --fix -c .eslintrc.js --ext .ts,.tsx,.js,.jsx .",
    "lint:stylelint": "stylelint --fix --config stylelint.config.js \"**/*.(css|less)\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-angular": "^13.2.0",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "@umijs/test": "^3.5.20",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "dumi": "^1.1.30",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^3.0.1",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "less": "^4.1.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "serve": "^12.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.4.0",
    "stylelint-less": "^1.0.1",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3",
    "yorkie": "^2.0.0"
  }
}
